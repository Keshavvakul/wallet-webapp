{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "typeRoots": ["./types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./app/*"],
      "@components/*": ["./components/*"],
      "@actions/*": ["./actions/*"],
      "@data/*": ["./data/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}